<div>
    <div class="row justify-content-between">
        <div class="col-6 mb-2">
            <%= form_with model: Stock, local: true, class: "form-inline float-left" do |form| %>
                <div>
                    <%= form.text_field :symbol, placeholder: "Submit Symbol", class: "form-control mr-2" %>
                </div>
                <%= form.submit "Submit", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
    <div>
        <table class="table">
            <thead id="stock-list-head" class="thead-light">
                <tr>
                    <th scope="col">Symbol</th>
                    <th scope="col">Company</th>
                    <th scope="col">Exchange</th>
                    <th scope="col">Sector</th>
                    <th scope="col">Website</th>
                </tr>
            </thead>
            <tbody id="stock-list-body">
                <% stocks.each do |stock| %>
                    <tr>
                        <td><%= link_to stock.symbol, stock_path(stock) %></td>
                        <td><%= stock.company_name %></td>
                        <td><%= stock.exchange %></td>
                        <td><%= stock.sector %></td>
                        <td><%= link_to stock.website, stock.website, target: "_blank" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
